<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/firstImage"
        android:layout_width="140dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/ic_activityphoto"
        tools:srcCompat="@mipmap/ic_activityphoto" />

    <ImageView
        android:id="@+id/secondImage"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginLeft="4dp"
        app:srcCompat="@mipmap/ic_activityphoto2"
        tools:srcCompat="@mipmap/ic_activityphoto2" />

    <ImageView
        android:id="@+id/tirdImage"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginLeft="4dp"
        app:srcCompat="@mipmap/ic_activityphoto4"
        tools:srcCompat="@mipmap/ic_activityphoto4" />

    <ImageView
        android:id="@+id/fourthImage"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginLeft="4dp"
        app:srcCompat="@mipmap/ic_activityphoto3"
        tools:srcCompat="@mipmap/ic_activityphoto3" />

    </LinearLayout>
</HorizontalScrollView>
